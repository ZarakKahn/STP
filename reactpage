import React, { useState } from 'react';
import axios from 'axios';
import Whitelist from './Whitelist';

const HierarchyManage = () => {
  const [data, setData] = useState([]);
  const [num, setNum] = useState('');
  const [message, setMessage] = useState('');
  const [isOpen, setIsOpen] = useState(false);

  const fetchData = async () => {

    try {
      const result = await axios.post(
        `http://portal.mashitec.com/SalesWebApi/api/Gethierarchy/?num=${encodeURIComponent(num)}&role=SaleMan`,
      );
      if (result.status === 200) {
        setMessage("Number Correct");
      }
      else {
        setMessage("Number Incorrect");
      }
      setData(result.data);
    } catch (error) {
      setMessage("Error: " + error.msg);
    }
  };

  const handleInputChange = (event) => {
    setNum(event.target.value);
  };

  const handleSubmit = (event) => {
    event.preventDefault();
    fetchData();
  };


  return (
    <div className="flex flex-col items-center justify-center min-h-fit bg-gray-100 py-2">
      <form onSubmit={handleSubmit} className="w-full max-w-md bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <div className="mb-4">
          <label className="block text-gray-700 text-sm font-bold mb-2" htmlFor="number">
            Please Enter Number (without 0):
          </label>
          <input className="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="number" type="text" value={num} onChange={handleInputChange} required />
        </div>
        <div className="flex items-center justify-between">
          <button className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Search
          </button>
        </div>
        <p id="msg" className="mt-2 text-center text-sm text-gray-600">
          {message}
        </p>
      </form>

      <div className="w-full max-w-md mt-5">
        <table className="table-auto w-full">
          <thead>
            <tr>
              <th className="px-4 py-2 border-b-2 border-gray-200 bg-blue-200 text-left text-sm leading-4 tracking-wider">Name</th>
              <th className="px-4 py-2 border-b-2 border-gray-200 bg-blue-200 text-left text-sm leading-4 tracking-wider">Number</th>
              <th className="px-4 py-2 border-b-2 border-gray-200 bg-blue-200 text-left text-sm leading-4 tracking-wider">City</th>
              <th className="px-4 py-2 border-b-2 border-gray-200 bg-blue-200 text-left text-sm leading-4 tracking-wider">Distributor</th>
              <th className="px-4 py-2 border-b-2 border-gray-200 bg-blue-200 text-left text-sm leading-4 tracking-wider">Offcode</th>
            </tr>
          </thead>
          <tbody className="bg-white">
            {data.map((item, index) => (
              <tr key={index} className={index % 2 === 0 ? 'bg-gray-100' : ''}>
                <td className="px-4 py-2 border-b border-gray-200 text-sm">{item.SaleMan}</td>
                <td className="px-4 py-2 border-b border-gray-200 text-sm">{item.SaleMan_Num}</td>
                <td className="px-4 py-2 border-b border-gray-200 text-sm">{item.City}</td>
                <td className="px-4 py-2 border-b border-gray-200 text-sm">{item.DMS_Dist_Name}</td>
                <td className="px-4 py-2 border-b border-gray-200 text-sm">{item.offcode}</td>
              </tr>
            ))}
          </tbody>
        </table>
        <div className="flex items-center justify-between">
          <button onClick={() => setIsOpen(true)} className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-3" type="submit">WhiteList</button>
          <Whitelist isOpen={isOpen} setIsOpen={setIsOpen} />
        </div>
        <div className="flex items-center justify-between">
          <button className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-3" type="submit">Re-WhiteList</button>
        </div>
        <div className="flex items-center justify-between">
          <button className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-3" type="submit">Number change</button>
        </div>
      </div>
    </div>

  );
};

export default HierarchyManage;

}
